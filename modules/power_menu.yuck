(defwidget power_menu_widget []
  (box
    :class "power-menu-container"
    :orientation "v"
    :space-evenly false
    (box
      (box
        :halign "start"
        (image
          :image-width 80
          :image-height 80
          :path "./assets/avatar.png"
        )
        (box
          :halign "start"
          :valign "center"
          :orientation "v"
          (label :style "font-weight: bold" :text "Wachamuli")
          (label :text "Jos√© Richiez")
        )
      )
      (box
        :halign "end"
        (pressable
          :onclick ""
          (icon
            :width 25
            :height 25
            :tooltip "Settings"
            :path "gear.svg"
          )
        )
      )
    )
    
    (v_separator :draw-line true)
    
    (power_opts)
  )
)

(defwidget power_opts []
  (box
    :space-evenly false
    (box
      :spacing 10
      (circular_button
        :onclick ""
        :tooltip "Suspend"
        :path "moon.svg"
      )
      (circular_button
        :onclick "systemctl reboot"
        :tooltip "Restart"
        :path "restart.svg"
      )
      (circular_button
        :onclick "hyprctl dispatch exit"
        :tooltip "Logout"
        :path "logout.svg"
      )
      (circular_button
        :onclick ""
        :tooltip "Lockscreen"
        :path "lock.svg"
      )
    )
    (box
      :halign "end"
      :hexpand true
      (circular_button
        :variable true
        :onclick "shutdown now"
        :tooltip "Shutdown"
        :alt_path "power-alt.svg"
      )
    )
  )
)